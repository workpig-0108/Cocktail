<div class="container">
    <div class="row">


		<div class='col-lg-12'>
			<div class="row">
		 		<h2>レシピ一覧</h2><h6>(全<%= @recipes.count %>件)</h6>
		 	</div>

			<div class="row">

				<% @recipes.each do |recipe| %>
					<div class="col-sm-4 col-xs-4">
						<%= link_to recipe_path(recipe) do %>
							<%= attachment_image_tag recipe, :image, :fill, 100, 150,  fallback: "no_image_tate.jpg"%>
						<% end %>
		 				<p><%= recipe.name %></p>
		 				<p>By
    						<%= recipe.user.name %>
 						</p>
 						<p>
    						<%= link_to "#{recipe.post_comments.count} コメント", recipe_path(recipe.id) %>
  						</p>
		 			</div>
				<% end %>

			 	<div class='page'>
			 		<%= paginate @recipes %>
			 	</div>

			</div>
		</div>

	</div>
</div>