<td>
  <% if recipe.favorited_by?(current_user) %>
    <%= link_to recipe_favorites_path(recipe, redirect_id: 0), method: :delete, remote: true do %>
    	<%#= fa_icon "heart", text: "#{recipe.favorites.count}", style: "color: red;" %>
    	<span class="glyphicon glyphicon-heart"><%= recipe.favorites.count%></span>
    <% end %>
  <% else %>
    <%= link_to recipe_favorites_path(recipe, redirect_id: 0), method: :post, remote: true do %>
    	<%#= fa_icon "heart-o", text: "#{recipe.favorites.count}", style: "color: red;" %>
    	<span class="glyphicon glyphicon-heart-empty"><%= recipe.favorites.count %></span>
    <% end %>
  <% end %>
</td>